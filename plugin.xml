<?xml version="1.0" encoding="UTF-8"?>

<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
        id="sam-share-from-gallery"
        version="0.0.2">
  <name>SAM Share from Gallery plugin</name>
  <description>SAM Share from Gallery plugin</description>
  <license>HP License</license>
  <keywords>Share,apps</keywords>
  <repo>https://github.com/agomezmoron/sam-share-from-gallery.git</repo>
  <issue>https://github.com/agomezmoron/sam-share-from-gallery/issues</issue>

  <!-- android -->
  <platform name="android">
<!--    <config-file target="res/xml/config.xml" parent="/*">
      <feature name="IntentPlugin">
        <param name="android-package" value="com.hubmedia.cordova.plugin.intent.IntentPlugin"/>
      </feature>
    </config-file>

    <js-module src="www/android/IntentPlugin.js" name="IntentPlugin">
      <clobbers target="IntentPlugin" />
    </js-module>

    <source-file src="src/android/IntentPlugin.java" target-dir="src/com/hubmedia/cordova/plugin/intent" />-->

    <config-file target="AndroidManifest.xml" parent="/manifest/application/activity">
      <intent-filter>
        <!--<action android:name="SHARE_TO_HM" />-->
        <action android:name="android.intent.action.MAIN" />
        <action android:name="android.intent.action.SEND_MULTIPLE" />
        <action android:name="android.intent.action.SEND" />
        <category android:name="android.intent.category.DEFAULT" />
        <data android:mimeType="image/*" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </config-file>
  </platform>

  <!-- ios -->
  <platform name="ios">

    <!-- Copying icons -->
    <resource-file src="src/ios/resources/icon/icon-22x29.png" />
    <resource-file src="src/ios/resources/icon/icon-44x58.png" />
    <resource-file src="src/ios/resources/icon/icon-64x64.png" />
    <resource-file src="src/ios/resources/icon/icon-320x320.png" />
      
    <!-- Copying additional iOS files -->
    <resource-file src="src/ios/Base.lproj/MainInterface.storyboard" target-dir="HubMedia/Base.lproj/MainInterface.storyboard" />
    <resource-file src="src/ios/Media.xcassets/Contents.json" target-dir="HubMedia/Media.xcassets/Contents.json" />
    <resource-file src="src/ios/Media.xcassets/no-image.imageset/Contents.json" target-dir="HubMedia/Media.xcassets/no-image.imageset/Contents.json" />
    <resource-file src="src/ios/Media.xcassets/no-image.imageset/no-image-available-1.png" target-dir="HubMedia/Media.xcassets/no-image.imageset/no-image-available-1.png" />
    <resource-file src="src/ios/Media.xcassets/no-image.imageset/no-image-available-2.png" target-dir="HubMedia/Media.xcassets/no-image.imageset/no-image-available-2.png" />
    <resource-file src="src/ios/Media.xcassets/no-image.imageset/no-image-available.png" target-dir="HubMedia/Media.xcassets/no-image.imageset/no-image-available.png" />

    <!-- Copying header files -->
    <header-file src="src/ios/HubMedia-Bridging-Header.h" target-dir="HubMedia"/>
      
    <!-- Copying the source files -->
    <source-file src="src/ios/Collection.swift" target-dir="HubMedia"/>
    <source-file src="src/ios/CollectionCell.swift" target-dir="HubMedia"/>
    <source-file src="src/ios/ImageCell.swift" target-dir="HubMedia"/>
    <source-file src="src/ios/ImageExtension.swift" target-dir="HubMedia"/>
    <source-file src="src/ios/ShareViewController.swift" target-dir="HubMedia"/>

  </platform>
</plugin>
